{
  "name": "ts-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "watch:style": "cross-env TAILWIND_MODE=watch postcss -w src/assets/tailwind/index.css -o src/assets/styles/styles.css --verbose",
    "build:style": "NODE_ENV=production postcss src/assets/tailwind/index.css -o src/assets/styles/styles.css --verbose",
    "start:react": "vite --host",
    "start": "npm-run-all -p watch:style start:react",
    "build:react": "vite build",
    "build": "npm-run-all -s build:style build:react",
    "preview": "vite preview --host",
    "prepare": "husky install",
    "pretty": "prettier --write \"**/*.+(js|jsx|json|css|md)\"",
    "lint-fix": "npm run lint --cache --fix --max-warnings=0",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-checker": "^0.5.6"
  },
  "lint-staged": {
    "src/**/*.+(js|jsx|json|ts|tsx)": "eslint --cache --fix --max-warnings=0",
    "*.(js|css|md)": "prettier --write"
  }
}
